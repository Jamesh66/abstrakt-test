{# use block layout #}
{% extends '_blocks/_layout' %}

{# section background #}
{% set background = 'bg-black' %}

{% block body %}
  <div class="image-content container py-[6.5rem] relative grid grid-cols-6 lg:grid-cols-12 gap-[2.3rem] overflow-hidden">
    <div class="image-content__circle--top absolute lg:inline-block top-[210px] left-[-450px] lg:top-[-300px] lg:left-[50px]">
    {{ svg('@webroot/assets/images/svg/circle.svg')}}
    </div>
    <div class="image-content__circle--middle absolute hidden lg:inline top-[200px] left-[150px]">
    {{ svg('@webroot/assets/images/svg/circle.svg') }}
    </div>
    <div class="image-content__circle--bottom absolute hidden lg:inline top-[200px] left-[-400px]">
    {{ svg('@webroot/assets/images/svg/circle.svg') }}
    </div>
    <div class="image-content__image col-start-1 col-span-6 lg:col-span-4 lg:grid-cols-4 row-start-1 relative">
        <img src="{{ url('/assets/images/street.png') }}" alt="Street">
    </div>
    <div class="image-content__content flex flex-col gap-[2.5rem] col-start-1 col-span-6 lg:grid-cols-4 lg:col-start-6 lg:my-auto z-[1]">
      {% if block.highlightedContent|length %}
      <p class="text-white font-bold font-text lg:text-xl">{{ block.highlightedContent }}</p>
      {% endif %}
      {% if block.imagecontentcontent|length %}
      <div class="text-grey-300 text-sm md:text-lg font-extralight flex flex-col gap-[2.5rem] lg:text-lg">
        {{ block.imagecontentcontent }}
      </div>  
      {% endif %}
      <div class="image-content__content__button-group flex flex-col lg:flex-row gap-5">
        {% if block.primaryButton %}
          <a class="button button-primary" href="{{block.primaryButton}}">{{block.primaryButton.text}}</a>
        {% endif %}
        {% if block.secondaryButton %}
          <a class="button button-secondary" href="{{block.secondaryButton}}">{{block.secondaryButton.text}}</a>
        {% endif %}
      </div> 
    </div><!-- /.flex flex-row -->
  </div><!-- end container-->

{% endblock %}